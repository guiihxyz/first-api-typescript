{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": true,

        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",

        "rootDir": "./src",
        "outDir": "./build",

        "baseUrl": "./src",
        "paths": {
            "#settings/*": ["./settings/*"],
            "#functions/*": ["./functions/*"],
            "#services/*": ["./services/*"],
            "#controllers/*": ["./controllers/*"],
            "#schemas/*": ["./database/schemas/*"],
            "#database": ["./database/index.js"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
